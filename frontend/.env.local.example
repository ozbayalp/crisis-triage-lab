# CrisisTriage AI - Frontend Environment Configuration
# Copy this file to .env.local and adjust values as needed

# =============================================================================
# Backend Connection
# =============================================================================

# REST API base URL (include scheme and port, no trailing slash)
NEXT_PUBLIC_BACKEND_HTTP_URL=http://localhost:8000

# WebSocket base URL (include scheme and port, no trailing slash)
# Use ws:// for local development, wss:// for production
NEXT_PUBLIC_BACKEND_WS_URL=ws://localhost:8000

# =============================================================================
# Feature Flags (optional)
# =============================================================================

# Enable detailed logging in browser console
# NEXT_PUBLIC_DEBUG=true

# Maximum triage history entries to keep in memory
# NEXT_PUBLIC_MAX_HISTORY=100
