# ============================================
# CrisisTriage AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in values.
# NEVER commit .env to version control.
# ============================================

# --------------------------------------------
# Application
# --------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# --------------------------------------------
# Backend Server
# --------------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1

# --------------------------------------------
# Frontend
# --------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# --------------------------------------------
# Model Paths (local inference)
# --------------------------------------------
WHISPER_MODEL_SIZE=base
WHISPER_MODEL_PATH=./models/whisper
TRIAGE_MODEL_PATH=./models/triage/latest.pt

# --------------------------------------------
# Privacy & Data Retention
# --------------------------------------------
# Set to 'true' to enable persistence (use with caution)
PERSIST_RAW_AUDIO=false
PERSIST_TRANSCRIPTS=false
PERSIST_FEATURES=false

# Session data TTL in seconds (0 = delete immediately after session)
SESSION_TTL_SECONDS=0

# --------------------------------------------
# Redis (optional, for session state)
# --------------------------------------------
REDIS_URL=redis://localhost:6379/0

# --------------------------------------------
# ML Experiment Tracking (optional)
# --------------------------------------------
MLFLOW_TRACKING_URI=
WANDB_API_KEY=
WANDB_PROJECT=crisis-triage-lab

# --------------------------------------------
# Security
# --------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
